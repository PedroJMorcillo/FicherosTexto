package contadortema3;

import java.util.Scanner;

/**
 *
 * @author Pedro
 */
public class Contador {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        System.out.println("Practica modificada para REPOSITORIO);
        int resultado;
        resultado = Contador1(3,10);
        System.out.println("El resultado de la funciÃ³n es: "+resultado);
    }
    
    static int Contador1(int x, int y){
    
        Scanner entrada = new Scanner(System.in);
        int num, c=0;
        if(x>0 && y>0){
            System.out.println("Escribe un nÃºmero: ");
            num = entrada.nextInt();
            if (num >=x && num <= y) {
                System.out.println("\tNÃºmero en el rango");
                c++;
            }
            else
                System.out.println("\tNÃºmero fuera de rango");
        }
        else
            c = -1;
        entrada.close();
        return c;
        
        
    }
    
}
